<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/one_layout_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/one_img_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/one_txt_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="子项ONE" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <LinearLayout
        android:id="@+id/two_layout_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/two_img_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:color/holo_red_light"
            app:srcCompat="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/two_txt_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="子项TWO" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <LinearLayout
        android:id="@+id/three_layout_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/three_img_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:color/holo_red_light"
            tools:srcCompat="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/three_txt_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="子项THREE" />
    </LinearLayout>
</LinearLayout>
